@require 'dashboard/_media'
_ccolumns = 2 3 4 5 6 8 12
._container
    > ._col
        for num in _ccolumns
            &_{num}
                @media (min-width: $_m_mobile)
                    column(1/num)
            &_{num}_im
                @media (max-width: $_m_mobile)
                    column(1/num)
            if num > 2
                for spn in (2..num - 1)
                    &_{spn}of{num}
                        @media (min-width: $_m_mobile)
                            column(spn/num)
                    &_{spn}of{num}_im
                        @media (max-width: $_m_mobile)
                            column(spn/num)
    > ._span
        for num in _ccolumns
            for spn in (1..num - 1)
                &_{spn}of{num}
                    span(spn/num)
        &_all
            span(1/1)
    &.centre
        center()
