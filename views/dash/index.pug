-
    var scripts = [
        'bower_components/jquery/dist/jquery',
        'bower_components/jquery-ui/jquery-ui',
        'bower_components/bootstrap-sass/assets/javascripts/bootstrap',
        'node_modules/socket.io-client/dist/socket.io',
        'bower_components/angular/angular',
        'bower_components/angular-ui-sortable/sortable',
        'bower_components/angular-animate/angular-animate',
        'bower_components/angular-route/angular-route',
        'bower_components/angular-aria/angular-aria',
        'bower_components/angular-local-storage/dist/angular-local-storage',
        'bower_components/angular-bootstrap-toggle/dist/angular-bootstrap-toggle',
        'bower_components/ng-socket-io/ng-socket-io',
        'dashboard/js/dashboard'
    ]
doctype html
html(lang='en', ng-app='CGDashboardApp')
    head
        title #{project} Graphics Dashboard
        link(rel='stylesheet', href='/bower_components/angular-bootstrap-toggle/dist/angular-bootstrap-toggle.css')
        link(rel='stylesheet', href='/css/dashboard.css')
    body
        .container(ng-controller='AppCtrl')
            header: .page-header
                h1
                    img#forgeLogo(src='/img/forge-black.svg')
                    | Graphics Dashboard
                    small  #{project}
            .form-group
                select.form-control(ng-model="currentMode", ng-options="mode.name for mode in modes")
            .row
                .col-lg-2: ul.nav.nav-pills.nav-stacked
                    li(role='presentation', ng-class='{active:isActive(section.url)}', ng-repeat="section in menu")
                        a(ng-href='#!{{section.url}}') {{section.name}}
                    li(role='presentation', ng-show='currentMode', ng-class='{active:isActive(currentMode.url)}')
                        a(ng-href='#!{{section.url}}') {{project}}: {{currentMode.name}}
                .col-lg-10
                    div(ng-view)
        each script in scripts
            script(src=`/${script}.js`)
